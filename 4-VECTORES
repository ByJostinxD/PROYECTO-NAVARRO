#define length(v,tipo) (sizeof(v) / sizeof(tipo))
#define LEDPin 5
int secuencia[] = {1, 0, 0, 1, 1, 0, 1, 1};

void setup() 
{
    pinMode(LEDPin, OUTPUT);
}

void loop() {
    for (int i = 0; i < length(secuencia, int); i++) {
        if (secuencia[i] == 1) {
            digitalWrite(LEDPin, HIGH);
        } else {
            digitalWrite(LEDPin, LOW);
        }
        delay(1000);
    }
}